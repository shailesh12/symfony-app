{% extends 'base.html.twig' %}
{% block title %}Manage Trainee{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Manage Trainees âœ…</h1>
    </div>

    <div class="example-wrapper">


        <table id="mytable" class="table table-bordred table-striped">

            <thead>

            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Birthday</th>
            <th>Actions</th>
            </thead>
            <tbody>
                {% for trainee in data %}
                    <tr>
                        <td> <a href="trainee/{{ trainee.id }}">{{ trainee.id }}</a></td>
                        <td> {{ trainee.name }}</td>
                        <td> {{ trainee.email }}</td>
                        <td> {{ trainee.gender }}</td>
                        <td> {{ trainee.dob|date('d-M-Y') }}</td>
                        <td> <a href="trainee/remove/{{ trainee.id }}">REMOVE</a></td>

                    </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
